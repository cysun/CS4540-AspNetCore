@model Employee

<table class="table">
    <tbody>
        <tr>
            <th>Id</th>
            <td>@Model.Id</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <th>Date Hired</th>
            <td>@Model.DateHired.ToString("d")</td>
        </tr>
        <tr>
            <th>Supervisor</th>
            <td>
                @if (Model.Supervisor != null)
                {
                    @Model.Supervisor.Name
                }
            </td>
        </tr>
    </tbody>
</table>